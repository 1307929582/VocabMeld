{
  "name": "vocabmeld",
  "version": "1.0.0",
  "description": "沉浸式语言学习 Chrome 插件 - 在日常浏览中自然习得语言",
  "scripts": {
    "dev": "vite -c vite.config.ui.js",
    "build:ui": "vite build -c vite.config.ui.js",
    "build:content": "vite build -c vite.config.content.js",
    "postbuild": "node scripts/post-build.js",
    "build": "npm run build:ui && npm run build:content && npm run postbuild",
    "build:old": "node scripts/build.js",
    "watch": "node scripts/build.js --watch"
  },
  "keywords": [
    "chrome-extension",
    "language-learning",
    "immersive-learning",
    "vocabulary"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vite": "^7.3.0"
  }
}
